/* miniprogram/pages/weather/weather.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 
.w {
  color: rgb(255, 0, 0);
}

.center {
  text-align: center;
  margin: auto 0;
}

.b {
  font-weight: bold;
}

.l {
  border: 1px solid #fff;
}

.f50 {
  font-size: 50rpx;
}

.bg {
  width: 100%;
  height: 690rpx;
}

.hor {
  display: flex;
  flex-direction: row;
  padding-bottom: 5rpx;
}

.container {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  margin: 0;
  padding: 0;
  display: block;
  height: 700rpx;
}

.temp {
  font-size: 170rpx;
}

.nowWeather{
  padding: 60rpx;
  
}

.weatherDetail {
  width: 100%;
  position: absolute;
  bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.forcast {
	background-color: beige;
  padding: 30rpx;
  margin: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
}

.img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}
